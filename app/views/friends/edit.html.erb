<div class="card bg-dark text-white min-vh-80">
  <h1 class="d-flex flex-row justify-content-center mt-3">Editing Friend</h1>

  <%= render "form", friend: @friend %>

</div>

<div class="d-flex flex-row justify-content-center m-1">
  <%= link_to "Show this friend", @friend, class:"btn btn-info m-1"%> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary m-1"%>
  <%= button_to "Delete friend", @friend, method: :delete, class:"btn btn-danger m-1"%>
</div>
